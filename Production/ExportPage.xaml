<Page x:Class="Production.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Production"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExportPage">

    <Grid>
        <GroupBox Width="450" Height="200" Header="Экспортировать">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="48*"/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="30" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Поставщиков"></TextBlock>
                <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="в Excel" x:Name="btnExportSE" FontSize="24" Height="71" Width="192" Click="btnExportSE_Click"></Button>
                    <Button Content="в Word" x:Name="btnExportSW" FontSize="24" Height="71" Width="192" Click="btnExportSW_Click"></Button>
                </WrapPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
