<Page x:Class="Production.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Production"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExportPage">

    <Grid>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnExportS" FontSize="24" Height="71" Width="192" Click="btnExportS_Click">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Экспортировать"></TextBlock>
                    <TextBlock Text="поставщиков" HorizontalAlignment="Center"></TextBlock>
                </StackPanel>
            </Button>
        </WrapPanel>
    </Grid>
</Page>
